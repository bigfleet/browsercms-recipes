<VirtualHost *:80>
	ServerName cms.<%= @params[:server_name] %>
  DocumentRoot <%= @params[:docroot] %>
	RailsAllowModRewrite on
  RailsBaseURI /
  RailsMaxPoolSize <%= @params[:max_pool_size] %>
  RailsPoolIdleTime 3600
  RailsEnv 'production'
  
	ErrorLog      <%= @params[:log_dir] %>/admin_site_error.log
	CustomLog     <%= @params[:log_dir] %>/admin_site_access.log combined

	ErrorDocument 404 /404.html
	ErrorDocument 500 /500.html

	RewriteEngine On

	<Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>